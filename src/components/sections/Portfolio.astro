<script>
  console.log('🔧 Portfolio.astro script cargado');
  
  // Verificar que la sección existe
  const portfolioSection = document.getElementById('portfolio');
  console.log('📍 Sección portfolio encontrada:', portfolioSection);
  
  // Verificar las tarjetas de proyecto
  const projectCards = document.querySelectorAll('.project-card');
  console.log('🃏 Tarjetas de proyecto encontradas:', projectCards.length);
  
  // Efecto de profundidad 3D con mousemove
  projectCards.forEach((card, index) => {
    console.log(`🃏 Configurando tarjeta ${index + 1}:`, card);
    
    card.addEventListener('mousemove', (e: Event) => {
      const mouseEvent = e as MouseEvent;
      const rect = card.getBoundingClientRect();
      const centerX = rect.left + rect.width / 2;
      const centerY = rect.top + rect.height / 2;
      
      // Calcular posición relativa del mouse (-1 a 1)
      const mouseX = (mouseEvent.clientX - centerX) / (rect.width / 2);
      const mouseY = (mouseEvent.clientY - centerY) / (rect.height / 2);
      
      // Aplicar transformaciones 3D sutiles
      const rotateY = mouseX * 10; // Rotación en Y máximo 10 grados
      const rotateX = -mouseY * 10; // Rotación en X máximo 10 grados (invertido)
      
      // Aplicar transformaciones a diferentes capas para crear profundidad
      const cardInner = card.querySelector('.project-card-inner') as HTMLElement;
      const projectImage = card.querySelector('.project-image') as HTMLElement;
      const projectContent = card.querySelector('.project-content') as HTMLElement;
      
      if (cardInner) {
        cardInner.style.transform = `rotateX(${rotateX}deg) rotateY(${rotateY}deg)`;
      }
      
      if (projectImage) {
        // La imagen se mueve ligeramente más para crear parallax
        projectImage.style.transform = `
          scale(1.05) 
          translateX(${mouseX * 5}px) 
          translateY(${mouseY * 5}px)
        `;
      }
      
      if (projectContent) {
        // El contenido se mueve menos para crear capas
        projectContent.style.transform = `
          translateX(${mouseX * 2}px) 
          translateY(${mouseY * 2}px)
        `;
      }
    });
    
    // Resetear transformaciones al salir del hover
    card.addEventListener('mouseleave', () => {
      const cardInner = card.querySelector('.project-card-inner') as HTMLElement;
      const projectImage = card.querySelector('.project-image') as HTMLElement;
      const projectContent = card.querySelector('.project-content') as HTMLElement;
      
      if (cardInner) {
        cardInner.style.transform = 'rotateX(0deg) rotateY(0deg)';
      }
      
      if (projectImage) {
        projectImage.style.transform = 'scale(1.05) translateX(0px) translateY(0px)';
      }
      
      if (projectContent) {
        projectContent.style.transform = 'translateX(0px) translateY(0px)';
      }
    });
  });
  
  console.log('✅ Configuración de Portfolio completada');

  // Animaciones GSAP con ScrollTrigger
  document.addEventListener('DOMContentLoaded', function() {
    console.log('🎬 DOM cargado, verificando GSAP...');
    
    // Función para inicializar GSAP
    function initGSAP() {
      if (typeof gsap !== 'undefined' && gsap.registerPlugin) {
        gsap.registerPlugin(ScrollTrigger);
        console.log('🎬 GSAP y ScrollTrigger inicializados para Portfolio');

        // Marcar que GSAP está listo
        document.body.classList.add('gsap-ready');
        
        // Pequeño delay para asegurar que los estilos CSS se apliquen
        setTimeout(() => {
          // Animación de entrada de las tarjetas
          gsap.fromTo(".gsap-animate", 
            {
              opacity: 0,
              y: 60,
              scale: 0.9
            },
            {
              opacity: 1,
              y: 0,
              scale: 1,
              duration: 0.8,
              stagger: 0.15,
              ease: "power2.out",
              scrollTrigger: {
                trigger: "#portfolio",
                start: "top 70%",
                toggleActions: "play none none reverse"
              }
            }
          );

          console.log('✨ Animaciones GSAP de Portfolio configuradas');
        }, 100);
      } else {
        console.warn('⚠️ GSAP no está disponible para Portfolio');
        // Si GSAP no está disponible, asegurar que las tarjetas sean visibles
        document.querySelectorAll('.gsap-animate').forEach(el => {
          const element = el as HTMLElement;
          element.style.opacity = '1';
          element.style.transform = 'scale(1) translateY(0)';
        });
      }
    }

    // Intentar inicializar GSAP inmediatamente
    initGSAP();
    
    // También intentar después de un pequeño delay por si GSAP aún no se ha cargado
    setTimeout(initGSAP, 100);
    setTimeout(initGSAP, 500);
  });
</script>
