<style>
  /* Estilos para las tarjetas de proyecto */
  .project-card {
    min-height: 600px;
    opacity: 1;
    transform: scale(1);
  }

  /* Estado inicial para animaciones GSAP */
  .gsap-animate {
    opacity: 1;
    transform: scale(1);
  }

  /* Solo aplicar estado oculto cuando GSAP esté disponible */
  .gsap-ready .gsap-animate {
    opacity: 0;
    transform: scale(0.9) translateY(60px);
  }

  .project-card-inner {
    min-height: 100%;
    display: flex;
    flex-direction: column;
    overflow: hidden;
  }

  /* Perspectiva para efectos 3D */
  .perspective-1000 {
    perspective: 1000px;
  }

  /* Contenedor de imagen responsivo para imágenes verticales */
  .project-image-container {
    width: 100%;
    height: 480px;
    overflow: hidden;
    position: relative;
    flex-shrink: 0;
  }

  .project-image {
    transition: opacity 0.5s ease, filter 0.5s ease, transform 0.3s ease;
    object-position: center top;
    position: absolute;
    top: 0;
    left: 0;
  }

  /* Contenido de texto posicionado debajo de la imagen */
  .project-content {
    flex-shrink: 0;
    padding: 1.5rem;
    background: rgba(13, 11, 26, 0.9);
    backdrop-filter: blur(10px);
  }

  /* Efectos VHS adaptados */
  .vhs-overlay {
    pointer-events: none;
    z-index: 10;
  }

  .scanlines {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 100;
    opacity: 0.6;
    animation: opacity 3s linear infinite;
  }

  .scanlines::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    pointer-events: none;
    background: linear-gradient(to bottom, transparent 50%, rgba(0, 0, 0, 0.5) 51%);
    background-size: 100% 4px;
    animation: scanlines 0.2s linear infinite;
  }

  .noise {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    z-index: 200;
    opacity: 0.8;
    pointer-events: none;
  }

  .noise::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('https://ice-creme.de/images/background-noise.png');
    pointer-events: none;
  }

  .noise-moving {
    opacity: 1;
    z-index: 250;
  }

  .noise-moving::before {
    animation: noise 1s infinite alternate;
  }

  .intro-wrap {
    position: absolute;
    top: 0;
    left: 0;
    font-family: 'VCR OSD Mono', monospace;
    color: #ffffff;
    font-size: 0.75rem;
    width: 100%;
    height: 100%;
    background: rgba(43, 82, 255, 0.7);
    z-index: 300;
    pointer-events: none;
  }

  .intro-wrap .noise::before {
    background-size: 200%;
  }

  .play {
    position: absolute;
    left: 1rem;
    top: 1rem;
    animation: rgbText 2s steps(9) 0s infinite alternate;
    z-index: 400;
    pointer-events: none;
  }

  .time {
    position: absolute;
    right: 1rem;
    top: 1rem;
    animation: rgbText 1s steps(9) 0s infinite alternate;
    z-index: 400;
    pointer-events: none;
  }

  .recordSpeed {
    position: absolute;
    left: 1rem;
    bottom: 1rem;
    animation: rgbText 1s steps(9) 0s infinite alternate;
    z-index: 400;
    pointer-events: none;
  }

  /* Animaciones VHS */
  @keyframes noise {
    0%, 100% { background-position: 0 0; }
    10% { background-position: -5% -10%; }
    20% { background-position: -15% 5%; }
    30% { background-position: 7% -25%; }
    40% { background-position: 20% 25%; }
    50% { background-position: -25% 10%; }
    60% { background-position: 15% 5%; }
    70% { background-position: 0 15%; }
    80% { background-position: 25% 35%; }
    90% { background-position: -10% 10%; }
  }

  @keyframes opacity {
    0% { opacity: 0.6; }
    20% { opacity: 0.3; }
    35% { opacity: 0.5; }
    50% { opacity: 0.8; }
    60% { opacity: 0.4; }
    80% { opacity: 0.7; }
    100% { opacity: 0.6; }
  }

  @keyframes scanlines {
    from {
      background: linear-gradient(to bottom, transparent 50%, rgba(0, 0, 0, 0.5) 51%);
      background-size: 100% 4px;
    }
    to {
      background: linear-gradient(to bottom, rgba(0, 0, 0, 0.5) 50%, transparent 51%);
      background-size: 100% 4px;
    }
  }

  @keyframes rgbText {
    0% {
      text-shadow: -1px 1px 8px rgba(255, 255, 255, 0.6), 1px -1px 8px rgba(255, 255, 235, 0.7), 0px 0 1px rgba(251, 0, 231, 0.8), 0 0px 3px rgba(0, 233, 235, 0.8), 0px 0 3px rgba(0, 242, 14, 0.8), 0 0px 3px rgba(244, 45, 0, 0.8), 0px 0 3px rgba(59, 0, 226, 0.8);
    }
    25% {
      text-shadow: -1px 1px 8px rgba(255, 255, 255, 0.6), 1px -1px 8px rgba(255, 255, 235, 0.7), 0px 0 1px rgba(251, 0, 231, 0.8), 0 0px 3px rgba(0, 233, 235, 0.8), 0px 0 3px rgba(0, 242, 14, 0.8), 0 0px 3px rgba(244, 45, 0, 0.8), 0px 0 3px rgba(59, 0, 226, 0.8);
    }
    45% {
      text-shadow: -1px 1px 8px rgba(255, 255, 255, 0.6), 1px -1px 8px rgba(255, 255, 235, 0.7), 5px 0 1px rgba(251, 0, 231, 0.8), 0 5px 1px rgba(0, 233, 235, 0.8), -5px 0 1px rgba(0, 242, 14, 0.8), 0 -5px 1px rgba(244, 45, 0, 0.8), 5px 0 1px rgba(59, 0, 226, 0.8);
    }
    50% {
      text-shadow: -1px 1px 8px rgba(255, 255, 255, 0.6), 1px -1px 8px rgba(255, 255, 235, 0.7), -5px 0 1px rgba(251, 0, 231, 0.8), 0 -5px 1px rgba(0, 233, 235, 0.8), 5px 0 1px rgba(0, 242, 14, 0.8), 0 5px 1px rgba(244, 45, 0, 0.8), -5px 0 1px rgba(59, 0, 226, 0.8);
    }
    55% {
      text-shadow: -1px 1px 8px rgba(255, 255, 255, 0.6), 1px -1px 8px rgba(255, 255, 235, 0.7), 0px 0 3px rgba(251, 0, 231, 0.8), 0 0px 3px rgba(0, 233, 235, 0.8), 0px 0 3px rgba(0, 242, 14, 0.8), 0 0px 3px rgba(244, 45, 0, 0.8), 0px 0 3px rgba(59, 0, 226, 0.8);
    }
    90% {
      text-shadow: -1px 1px 8px rgba(255, 255, 255, 0.6), 1px -1px 8px rgba(255, 255, 235, 0.7), -5px 0 1px rgba(251, 0, 231, 0.8), 0 5px 1px rgba(0, 233, 235, 0.8), 5px 0 1px rgba(0, 242, 14, 0.8), 0 -5px 1px rgba(244, 45, 0, 0.8), 5px 0 1px rgba(59, 0, 226, 0.8);
    }
    100% {
      text-shadow: -1px 1px 8px rgba(255, 255, 255, 0.6), 1px -1px 8px rgba(255, 255, 235, 0.7), 5px 0 1px rgba(251, 0, 231, 0.8), 0 -5px 1px rgba(0, 233, 235, 0.8), -5px 0 1px rgba(0, 242, 14, 0.8), 0 5px 1px rgba(244, 45, 0, 0.8), -5px 0 1px rgba(59, 0, 226, 0.8);
    }
  }

  /* Efectos en hover */
  .project-card:hover .project-image {
    transform: scale(1.05);
  }

  .project-card:hover .vhs-overlay {
    opacity: 1;
  }

  /* Estilos para el botón Ver Sitio Web */
  .project-button-container {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 1000;
    pointer-events: auto;
  }

  .project-view-button {
    position: relative;
    padding: 12px 24px;
    background: linear-gradient(135deg, #00F2FF 0%, #FF00E5 100%);
    border: 2px solid transparent;
    border-radius: 8px;
    font-family: 'VCR OSD Mono', monospace;
    font-size: 0.875rem;
    font-weight: bold;
    color: #FFFFFF;
    cursor: pointer;
    transition: all 0.3s ease;
    overflow: hidden;
    backdrop-filter: blur(10px);
    animation: buttonPulse 2s ease-in-out infinite;
    text-decoration: none;
    display: inline-block;
    z-index: 1001;
    pointer-events: auto;
  }

  .project-view-button:hover {
    transform: scale(1.1);
    box-shadow: 0 0 25px rgba(0, 242, 255, 1), 0 0 50px rgba(255, 0, 229, 0.6);
    background: linear-gradient(135deg, #FF00E5 0%, #00F2FF 100%);
    animation: buttonPulseHover 0.5s ease-in-out infinite;
  }

  .button-text {
    position: relative;
    z-index: 10;
    color: #FFFFFF;
    text-shadow: 
      -1px -1px 0 #000000,
      1px -1px 0 #000000,
      -1px 1px 0 #000000,
      1px 1px 0 #000000,
      0 0 8px rgba(255, 255, 255, 0.5);
    font-weight: 900;
  }

  .button-glow {
    position: absolute;
    top: -2px;
    left: -2px;
    right: -2px;
    bottom: -2px;
    background: linear-gradient(135deg, #00F2FF, #FF00E5, #9D4EDD);
    border-radius: 8px;
    opacity: 0.7;
    filter: blur(8px);
    z-index: -1;
    animation: glowRotate 3s linear infinite;
  }

  @keyframes buttonPulse {
    0%, 100% {
      box-shadow: 0 0 5px rgba(0, 242, 255, 0.5);
    }
    50% {
      box-shadow: 0 0 15px rgba(0, 242, 255, 0.8), 0 0 25px rgba(255, 0, 229, 0.4);
    }
  }

  @keyframes glowRotate {
    0% {
      filter: blur(8px) hue-rotate(0deg);
    }
    100% {
      filter: blur(8px) hue-rotate(360deg);
    }
  }

  @keyframes buttonPulseHover {
    0%, 100% {
      box-shadow: 0 0 25px rgba(0, 242, 255, 1), 0 0 50px rgba(255, 0, 229, 0.6);
    }
    50% {
      box-shadow: 0 0 35px rgba(0, 242, 255, 1), 0 0 70px rgba(255, 0, 229, 0.8);
    }
  }

  /* Responsividad móvil */
  @media (max-width: 768px) {
    .project-image-container {
      height: 400px;
    }
    
    .project-card {
      min-height: 520px;
    }

    .project-content {
      padding: 1rem;
    }

