    opacity: 0.7;
    transition: opacity 0.3s ease;
  }

  .sun-container {
    animation: sunFloating 8s ease-in-out infinite;
  }

  /* Animaci√≥n de flotaci√≥n suave para el sol */
  @keyframes sunFloating {
    0%, 100% {
      transform: translateY(0px) rotate(0deg);
    }
    25% {
      transform: translateY(-10px) rotate(0.5deg);
    }
    50% {
      transform: translateY(-15px) rotate(0deg);
    }
    75% {
