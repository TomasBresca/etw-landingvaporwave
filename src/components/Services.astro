    right: 0;
    bottom: 0;
    background: transparent;
    border-radius: inherit;
    padding: 2px;
    background: transparent;
    mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    mask-composite: subtract;
    opacity: 0;
    transition: opacity 0.3s ease;
    pointer-events: none;
  }

  /* Gradientes espec√≠ficos para cada tarjeta en hover */
  .service-card-1:hover::before {
    background: linear-gradient(135deg, #00F2FF 0%, #9D4EDD 50%, #FF00E5 100%);
    opacity: 1;
  }

  .service-card-2:hover::before {
    background: linear-gradient(135deg, #FF00E5 0%, #9D4EDD 50%, #00F2FF 100%);
